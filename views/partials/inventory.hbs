                </button>
                
                <button onclick="hideProduct('{{this.p_id}}')"
                    class="border border-maincolor text-maincolor hover:bg-maincolor hover:text-white hover:border-white px-4 rounded-lg mx-[5px] h-[35px] text-center">
                    Hide
                </button>
            </div>


        </div>
        {{/each}}

    </div>

    