{{#if product}}

	<style>
  #originalBtn:hover {
      display: none;
  }
  #originalBtn:hover + #hoverBtn {
      display: flex;
  }
  #originalBtn, #hoverBtn {
    transition: opacity 0.3s ease;
}

    #add-review-button {
        user-select: none;
        cursor: pointer;

        display: flex;
        align-items: center;
        justify-content: space-around;

        height: 2.5rem;
        width: 10vw;
        background-color: #0980D3;
        border-radius: 22.5px;

        font-family: Inika;
        font-size: 1.25rem;
        color: white;
    }

    #add-review-button:hover {
        background-color: #ffffff;
        border-radius: 22.5px;
        color: #0980D3;
    }

    #submitBtn:hover {
        background-color: #ffffff;
        border-radius: 22.5px;
        color: #0980D3;
    }

    #submitBtn:hover img {
        filter: invert(35%) sepia(90%) saturate(1792%) hue-rotate(184deg) brightness(89%) contrast(93%);
    }

</style>
	
	<script>
		console.log("Recieved product: ");
	</script>
	<div class=" bg-white bg-opacity-80 p-1 rounded-md  w-[98%] mx-auto my-auto" style="box-shadow: 10px 10px 10px rgba(0, 0, 0, 0.1), -10px -10px 10px rgba(0, 0, 0, 0.1);">

	<div class=" my-5 mx-5 py-0 pl-2 border-b-4 border-b-maincolor font-Inika text-2xl w-48 ">Product Detail</div>

    <div class="bg-tertiary w-[60%] rounded-md mx-auto flex p-2 mb-10">

        <img class="max-w-[400px] max-f-full w-full h-full object-cover pr-10 my-auto ml-4 my-2 border-r-2 border-r-secondary border-opacity-50 " src={{product.productpic}} alt="Product Image">

        <div class="pl-10 flex flex-col justify-start w-full">
            <h2 class="font-Inknut text-secondary text-[32px] mt-5">{{product.name}}</h2>
            <p class="font-Inknut text-secondary text-2xl pb-2">&#8369; {{formatPrice product.price}}</p>
        
            <p class="text-[17px] pb-2">{{product.description}}</p>
            <span class="text-[17px] pb-3">In Stock: {{product.quantity}}</span>
        
            <form method="post" action="/add-to-cart" id="add" class="flex flex-col item-left w-[100%]">
                <label for="quantity" class="add">Quantity</label>

                <input type="text" id="quantity" value=1 class="add w-[50%]" data-index={{product.quantity}}>
                <p id="err"></p>
                <input type="hidden" id="p_id" value="{{product._id}}">
				
				<div class="mt-5 mb-2 mr-5 flex"  form="add">
 				   <button id="submitBtn" class="flex items-center w-auto h-10 px-3 bg-maincolor rounded-full text-white text-xl font-Inika ml-auto mr-5">
 				       <img class="w-5 mr-2" src="../uploads/cart.png" alt="Cart Icon" />
    				    Add to Cart
    				</button>

                    <div id="add-review-button">
                        <p>Edit Review</p>
                    </div>
				</div>
            </form>
                            
        </div>

    </div>

</div>


			
	</div>
{{else}}
	<h1>No product found!</h1>
{{/if}}