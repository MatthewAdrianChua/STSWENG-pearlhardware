    <style>
        .logincontainer {
            margin: 0px;
            font-family: Arial, sans-serif;
            background: url('../uploads/cover.png') no-repeat center center fixed;
            background-size:auto;
            border: 1px solid black;
            background-color: #f0f0f0; /* Fallback color in case the image is not available */
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            width: auto;
        }

        .login-container {
            width: 300px;
            background: #fff;
            padding: 20px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .login-title {
            font-size: 24px;
            margin-bottom: 20px;
            color: #333;
        }

        .input-container {
            margin-bottom: 20px;
        }

        .input-container input {
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            border: none;
            border-radius: 5px;
            background: linear-gradient(to right, #ccc, #f0f0f0); /* Adjusted colors */
            box-sizing: border-box;
            color: #333;
        }

        .forgot-password {
            text-align: center;
            margin-bottom: 25px; /* Adjusted margin further */
            color: #333;
            font-size: 14px; /* Adjusted font size */
        }

        .login-button {
            background: #0980D3;
            color: white;
            border: none;
            padding: 10px;
            width: 100%;
            border-radius: 5px;
            cursor: pointer;
        }

        .signup-link {
            text-align: center;
            margin-top: 10px;
            color: #0980D3;
        }
    </style>



    <div class="logincontainer">
        <div class="login-container">
            <div class="login-title">LOGIN</div>
            <div class="input-container">
                <input type="text" id ="logemail" placeholder="email">
            </div>
            <div class="input-container">
                <input type="password" id= "logpassword" placeholder="Password">
            </div>
            <div id="errors"></div>
            <button id="logsubmit">Login</button>
            <div><a href='/register' action="GET" class="signup-link">Not Registered? Sign Up</a></div>
        </div>
    </div>
	<script>
	document.addEventListener('keyup', function(x) { //make login button work with enter key
		if(x.keyCode == 13){
			document.querySelector("#logsubmit").click();
		}
	});
	</script>
